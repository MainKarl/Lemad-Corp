    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js" charset="utf-8"></script>

    @RenderSection("Styles", false)
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="logo total-white-link col-1 col-sm-1 col-md-1 col-lg-1 col-xl-1" asp-area="" asp-controller="Home" asp-action="Index"></a>
