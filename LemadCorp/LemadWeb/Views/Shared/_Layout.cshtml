                            }
                            else
                            {
                                <div class="dropdown">
                                    <button class="btn-login button-header total-white-link">Account</button>
                                    <div class="dropdown-content">
                                        <a asp-area="" asp-controller="Account" asp-action="Details">My account</a>
                                        <a asp-area="" asp-controller="Account" asp-action="Commands">My commands</a>
