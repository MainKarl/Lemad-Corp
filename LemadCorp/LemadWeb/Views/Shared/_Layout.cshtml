    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-switch.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/choices.js"></script>

    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            var prod = getCart();
            console.log(prod);

            if (prod != null) {
                prod.forEach(hideAlready);

                function hideAlready(item) {
                    item = item.slice(1);
                    item = item.slice(0, item.indexOf(';'));
                    console.log(item);
                    var name = 'cart-' + item;
                    if (document.body.contains(document.getElementById(name))) {
                        let button = document.getElementById(name);
                        button.innerHTML = "Already in the Cart";
                    }
                }
            }
        });

        var textPresetVal = new Choices('#choices-text-preset-values', { removeItemButton: true, });

        function returnArray() {
            const inner = document.querySelector('.choices__inner');

            const listText = [];

            if (inner.hasChildNodes()) {
                const list = document.querySelector('.choices__list--multiple');
                if (list.hasChildNodes()) {
                    for (child = list.firstChild; child != undefined; child = child.nextElementSibling) {
                        var text = $(child).attr('data-value');
                        listText.push(text);
                    }
                    return listText;
                }
                else {
                    return [];
                }
            }
            else {
                return [];
            }
        }

        function callList() {
            $("#call-list").attr('href', '/Product/List?searchString=' + returnArray());
            const button = document.getElementById('call-list');
            button.click();
        }

        /*
            Cart
        */
        function preAddingCart(id, name) {
            if (document.getElementById("cart-" + id).innerHTML.includes(" Add to Cart ")) {
                $.confirm({
                    title: 'Confirmation',
                    content: 'Do you really want to add ' + name + ' to the cart?',
                    buttons: {
                        yes: {
                            btnClass: 'btn-confirmation',
                            action: function () {
                                if(addCart(id) == true)
                                {
                                    $.alert(name + ' added to the cart!');
                                }
                            }
                        },
                        no: {
                            btnClass: 'btn-confirmation'
                        }
                    }
                });
            }
        }

        function askLogin(total, totalDiscount, totalWithDiscount, totalWithTaxes) {
                $.confirm({
                    title: 'Login',
                    content: 'Do you want to login to make your command?',
                    buttons: {
                        yes: {
                            btnClass: 'btn-confirmation',
                            action: function () {
                                document.getElementById('login-link').click();
                            }
                        },
                        no: {
                            btnClass: 'btn-confirmation',
                            action: function () {
                                var products = window.localStorage.Products;
                                var array = JSON.parse(products);
                                $('#command-link').attr('href', '/Product/Command?ProductId=' + JSON.stringify(array) + '&total='  + total + '&totalDiscount='  + totalDiscount + '&totalWithDiscount='  + totalWithDiscount + '&totalWithTaxes='  + totalWithTaxes);
                                document.getElementById('command-link').click();
                            }
                        }
                    }
                });
        }

        function addCart(productId) {
            var products = getCart();
            var result;
            if (products == null) {
                products = [];
                products.push({ id: productId, contract: 1 });
            }
            else {
                if (products.find(obj => obj.id == productId)) {
                    $.alert('This item is already in your cart!');
                    result = false;
                }
                else {
                    products.push({ id: productId, contract: 1 });
                    result = true;
                }
            }

            localStorage.setItem('Products', JSON.stringify(products));
            return result;
        }

        function preAddingCartWithDuration(id, name, max) {
            if (document.getElementById("cart-" + id).innerHTML.includes(" Add to Cart ")) {
                $.confirm({
                    title: 'Confirmation',
                    content: 'Do you really want to add ' + name + ' to the cart?',
                    buttons: {
                        yes: {
                            btnClass: 'btn-confirmation',
                            action: function () {
                                var x = document.getElementById('quantity').value;
                                console.log(typeof(x))
                                if (x === "")
                                {
                                    x = 1;
                                }
                                if (x > max)
                                {
                                    x = max;
                                }
                                if(addCartWithDuration(id, x) == true)
                                {
                                    $.alert(name + ' added to the cart!');
                                }
                            }
                        },
                        no: {
                            btnClass: 'btn-confirmation'
                        }
                    }
                });
            }
        }

        function DisableButton() {
                    console.log('Disabling...')
                    document.getElementById('submit-btn').disabled = true;
                    document.getElementById('submit-btn').innerHTML = 'Please wait for the confirmation';
                }

        function EnableButton() {
                    console.log('Enabling...')
                    document.getElementById('submit-btn').disabled = false;
                    document.getElementById('submit-btn').innerHTML = 'Confirm';
                }

        function addCartWithDuration(productId, duration) {
            var products = getCart();
            var result;
            console.log(duration)
            console.log(duration)
            console.log(duration)
            console.log(duration)
            if (products == null) {
                products = [];
                products.push({ id: productId, contract: duration });
            }
            else {
                if (products.find(obj => obj.id == productId)) {
                    $.alert('This item is already in your cart!');
                    result = false;
                }
                else {
                    products.push({ id: productId, contract: duration });
                    result = true;
                }
            }

            localStorage.setItem('Products', JSON.stringify(products));
            return result;
        }

        function removeCart(productId) {
            var products = getCart();
            var newProd = []

            if (products.find(obj => obj.id == productId)) {
                const index = products.map(e => e.id).indexOf(productId);

                products.forEach(function (item) {
                    if (item.id != productId) {
                        newProd.push(item);
                    }
                })



                if (newProd.length > 0) {
                    localStorage.setItem('Products', JSON.stringify(newProd));
                }
                else {
                    window.localStorage.clear();
                }

            }
        }

        function incrementCart(productId, max) {
            var products = getCart();

            if (products != null) {
                const newProd = products.map(obj => {
                    if (obj.id === productId) {
                        var number = obj.contract;
                        if (obj.contract < max) {
                            number = number + 1;
                        }

                        return {...obj, contract: number };
                    }

                    return obj;
                });

                localStorage.setItem('Products', JSON.stringify(newProd));
            }
        }

        function decrementCart(productId) {
            var products = getCart();
            const min = 1;

            if (products != null) {
                const newProd = products.map(obj => {
                    if (obj.id === productId) {
                        var number = obj.contract;
                        if (obj.contract > min) {
                            number = number - 1;
                        }

                        return {...obj, contract: number };
                    }

                    return obj;
                });

                localStorage.setItem('Products', JSON.stringify(newProd));
            }
        }

        function returnCart() {
            const number = getCart();

            if (number == null) {
                return '0';
            }

            return number.length;
        }

        function getCart() {
            var products = window.localStorage.Products;
            if (products != null) {
                var array = JSON.parse(products);
                return array;
            }
            return null;
        }

        function callCart() {
            var rep = getCart();

            if (rep == null)
                rep = '';

            $('#cart-link').attr('href', '/Product/Cart?ProductId=' + JSON.stringify(rep));
            document.getElementById('cart-link').click();
        }
    </script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({});
    </script>
</body>
</html>
