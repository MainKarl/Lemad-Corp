@model IEnumerable<Mechanics>

@if (ViewData["show"].ToString() == "true")
{
    @if (!ViewBag.Verification) {
        <p>No mechanics avaiables!</p>
    }
    else {
        @foreach (Mechanics item in Model) {
            <li class="list-group-item">
                @item.FirstName @item.LastName
            </li>
        }
    }
}
