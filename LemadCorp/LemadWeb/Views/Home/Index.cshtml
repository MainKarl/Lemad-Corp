@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
<link rel="stylesheet" href="~/sass/home.css" />
}

@model ContactClientForm

<div class="row">
    <div class="square-white basic-text col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <h1 class="basic-text-center" style="padding-top:10%">Fast teams, fast cars. <br> Your winning team starts here.</h1>
        <h2 class="basic-text-center">Sign up now to get started.</h2>
        <h4 class="basic-text-center">The best teams and over 500 000 others have done the same.</h4>

        <div class="team-logo-row team-logos"></div>
    </div>
    <div class="square-gold col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1 class="basic-text-center">Popular drivers</h1>
            </div>
        </div>
        <div class="row product-row">
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="alonso">
                </div>
                <div>
                    <p class="basic-text-center name-product">Fernando<br>Alonso</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">20,000,000.00$</p>
                </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
            </div>
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="verstappen">
                </div>
                <div>
                    <p class="basic-text-center name-product">Max<br>Verstappen</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">40,000,000.00$</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="square-gold col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div>
            <h2 style="text-align:center">Featured products</h2><br />
            <a class="effect effect-3" href="#" title="Learn More">Pilots</a>
            <a class="effect effect-3" href="#" title="Learn More">Team principals</a>
            <a class="effect effect-3" href="#" title="Learn More">Engineers</a>
            <a class="effect effect-3" href="#" title="Learn More">Mechanics</a>
            <a class="effect effect-3" href="#" title="Learn More">Power units</a>
        </div>
    </div>
    <div class="square-white col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1 class="basic-text-center">Popular team principals</h1>
            </div>
        </div>
        <div class="row product-row">
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="binotto">
                </div>
                <div>
                    <p class="basic-text-center name-product">Mattia<br>Binotto</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">30,000,000.00$</p>
                </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
            </div>
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="steiner">
                </div>
                <div>
                    <p class="basic-text-center name-product">Guenther<br>Steiner</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">15,000,000.00$</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="square-white circuitimage col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
    </div>
    <div class="square-gold col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1 class="basic-text-center">Popular power units</h1>
            </div>
        </div>
        <div class="row product-row">
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="redbull">
                </div>
                <div>
                    <p class="basic-text-center name-product">Red Bull<br>engine</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">100,000,000.00$</p>
                </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
            </div>
            <div class="item-box col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                <div class="ferrari">
                </div>
                <div>
                    <p class="basic-text-center name-product">Ferrari<br>engine</p>
                </div>
                <div>
                    <p class="basic-text-center price-product">80,000,000.00$</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="square-gold col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <h1 style="text-align:center">Interested? Talk to an agent!</h1>
        <h4 style="text-align:center">Complete de form below and we'll reach out to you in no time</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ContactClientTemp">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit!" class="btn btn-primary" disabled/>
                    </div>
                </form>

                @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
                }
            </div>
        </div>
    </div>
    <div class="square-white hamilton-team col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
    </div>
</div>
<div class="text-center">
    <div class="spaimage"></div>
</div>