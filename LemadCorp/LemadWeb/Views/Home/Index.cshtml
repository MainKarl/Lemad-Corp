@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/sass/home.css" />
    <link rel="stylesheet" href="~/sass/about.css" />
    <link rel="stylesheet" href="~/sass/ContactForm.css" />
}

    <div class="row">
        <div class="slogan-div col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 row">
            <div class="col-0 col-sm-0 col-md-1 col-lg-1 col-xl-1"></div>
            <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                <div class="first-text"
                 data-aos="flip-up">
                    <h1>Fast teams, fast cars. <br> Your winning team starts here.</h1>
                    <h2>Sign up now to get started.</h2>
                    <h4>The best teams and over 500 000 others have done the same.</h4>
                </div>
            </div>
            <div class="col-0 col-sm-0 col-md-7 col-lg-7 col-xl-7"
             data-aos="fade-left">
                <img class="img-slogan" src="~/img/home/slogan-logo.png" loading="lazy" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="feature-link-title">
                <h4>Featured products</h4>
            </div>
        </div>

        <div class="col-0 col-sm-0 col-md-1 col-lg-1 col-xl-1"></div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
            <div class="feature-link"
            data-aos="zoom-in-up">
                <a id="driver" class="feature-button" asp-area="" asp-controller="Product" asp-action="List" asp-route-CategoryFilter="DRIVER">Driver</a>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
            <div class="feature-link"
             data-aos="zoom-in-up">
                <a id="engineer" class="feature-button" asp-area="" asp-controller="Product" asp-action="List" asp-route-CategoryFilter="RACEENGINEER">Race Engineer</a>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
            <div class="feature-link"
             data-aos="zoom-in-up">
                <a id="technical" class="feature-button" asp-area="" asp-controller="Product" asp-action="List" asp-route-CategoryFilter="TECHNICALCHIEF">Technical Chief</a>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
            <div class="feature-link"
             data-aos="zoom-in-up">
                <a id="principal" class="feature-button" asp-area="" asp-controller="Product" asp-action="List" asp-route-CategoryFilter="PRINCIPAL">Principal</a>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
            <div class="feature-link"
             data-aos="zoom-in-up">
                <a id="powerunit" class="feature-button" asp-area="" asp-controller="Product" asp-action="List" asp-route-CategoryFilter="POWERUNIT">Power Unit</a>
            </div>
        </div>
        <div class="col-0 col-sm-0 col-md-1 col-lg-1 col-xl-1"></div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"> <hr /> </div>
    </div>
    <div class="row"> @* Features List *@
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="feature-link-title-prod">
                    <h4>Popular Drivers</h4>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 row">
