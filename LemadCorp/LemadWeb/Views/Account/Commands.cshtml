@model IEnumerable<LemadWeb.ViewModels.Account.MyCommandsVM>

<br />
<br />

@if (@Model.Count() > 0 && Model != null)
{
    @if (!User.IsInRole("admin"))
    {
        <h1>
            Commands for @Model.FirstOrDefault().FirstName @Model.FirstOrDefault().LastName
        </h1>
    }
    else
    {
        <h1>
            All commands
        </h1>
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    Date of command
                </th>
                <th>
                    Command id
                </th>
                <th>
                    Total
                </th>
                <th>
                    Status
                </th>
                <th>
                    Products
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @item.GetTotal()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @foreach (var p in item.Products)
                        {
                            <l>
                                @p.Name: @p.GetPrice() X @p.Quantity = @p.getTotalPrice()
                            </l>
                            <br />
                        }
                    </td>
                    @if (item.Status != CommandStatus.CANCELED)
                    {
                        <td>
                            <a asp-action="CommandCancelation" asp-route-id="@item.Id">Cancel</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>
        You don't have any commands yet!
    </h1>
}
