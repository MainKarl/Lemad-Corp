@model RegisterVM

<link rel="stylesheet" href="~/sass/login.css" />

<section class="h-100 gradient-form-register" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <form asp-action="Register">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <p>Please enter your informations</p>
                                    <div class="form-outline mb-4">
                                        <input asp-for="FirstName" id="form2Example11" class="form-control"
                                               placeholder="Enter your first name..." />
                                        <label class="form-label" for="form2Example11">First name</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="LastName" id="form2Example11" class="form-control"
                                               placeholder="Enter your last name..." />
                                        <label class="form-label" for="form2Example11">Last name</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" id="form2Example11" class="form-control"
                                               placeholder="Enter your email address" ... />
                                        <label class="form-label" for="form2Example11">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="PhoneNumber" type="tel" id="form2Example11" class="form-control"
                                               placeholder="Enter your phone number..." />
                                        <label class="form-label" for="form2Example11">Phone number</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" type="password" id="form2Example11" class="form-control"
                                               placeholder="Enter your password..." />
                                        <label class="form-label" for="form2Example11">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="PasswordConfirmation" type="password" id="form2Example11" class="form-control"
                                               placeholder="Reenter your password..." />
                                        <label class="form-label" for="form2Example11">Password confirmation</label>
                                        <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Address" id="form2Example11" class="form-control"
                                               placeholder="Enter your address..." />
                                        <label class="form-label" for="form2Example11">Address</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="City" id="form2Example11" class="form-control"
                                               placeholder="Enter your city..." />
                                        <label class="form-label" for="form2Example11">City</label>
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Country" id="form2Example11" class="form-control"
                                               placeholder="Enter your country..." />
                                        <label class="form-label" for="form2Example11">Country</label>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Province" id="form2Example11" class="form-control"
                                               placeholder="Enter your province..." />
                                        <label class="form-label" for="form2Example11">Province</label>
                                        <span asp-validation-for="Province" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="PostalCode" id="form2Example11" class="form-control"
                                               placeholder="Enter your postal code..." />
                                        <label class="form-label" for="form2Example11">postal code</label>
                                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button value="Register" type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" style="min-height:50px">
                                            Register!
                                        </button>
                                    </div>

                                    @*<input type="checkbox" id="ChkAddress" onclick="toggleAdress()" checked>*@

                                    @*                                    <div id="address">
                                        <vc:address-form id="address"></vc:address-form>
                                        </div>*@

                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h1 class="mb-4">Le Madrid Corp</h1>
                                <p class="big mb-0">
                                    Simply the fastests.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

