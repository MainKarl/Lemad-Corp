@model LoginVM
@{
    ViewData["Title"] = "Connection";
    //Layout = "~/Views/Shared/_LayoutHeaderless.cshtml";
}

<link rel="stylesheet" href="~/sass/login.css" />

<section class="h-100 gradient-form-login" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <form asp-action="Login">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" id="form2Example11" class="form-control"
                                               placeholder="Phone number or email address" />
                                        <label class="form-label" for="form2Example11">Username</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" type="password" id="form2Example22" class="form-control" />
                                        <label class="form-label" for="form2Example22">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button value="Login" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" style="min-height:50px">
                                            Log
                                            in
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Don't have an account?&nbsp&nbsp&nbsp</p>
                                        <a asp-action="Register" class="btn btn-primary fa-lg gradient-custom-2 mb-3" style="min-height:50px">
                                            Register
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h1 class="mb-4">Le Madrid Corp</h1>
                                <p class="big mb-0">
                                    Simply the fastests.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

