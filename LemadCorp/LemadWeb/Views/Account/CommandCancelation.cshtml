@model LemadDb.Domain.Entities.Command

@section Styles {
<link rel="stylesheet" href="~/sass/command.css" />
}
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-3 col-1">
        </div>
        <br />
        <br />
        <br />
        <div class="col-md-6 col-10 form-background">
            <br />
            <br />
            <h1>Are you sure you want to cancel this command?</h1>
            <hr />
            <h2>Command : @Model.Id</h2>
            <br />
            <form asp-action="CommandCancelation">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Cancel the command" class="checkout-button" />
            </form>
            <br />
            <br />
        </div>
    </div>
</div>
